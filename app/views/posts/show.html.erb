<article class="post">
  <%= render 'slug', post: @post %>
  <% if @post.text? -%>
    <section class="body"><%= @post.body %></section>
  <% end -%>
  <%= render 'actions', post: @post %>

  <%= render 'comments/form', comment: @comment %>

  <ol id="comments">
    <% @post.comment_threads.each do |comment| %>
      <li>
        <section class="comment-body">
          <%= comment.body %>
        </section>
        <ul class="actions">
          <li>
            <%= link_to 'reply',
              new_comment_path(parent_id: comment.id, format: 'js'),
              remote: true
            %>
          </li>
        </ul>

        <div id="reply-form-<%= comment.id %>" style="display: none"></div>
      </li>
    <% end %>
  </ol>
</article>
